{% extends 'main_layout.twig' %}

{% block extra %}
  <link rel="stylesheet" href="/css/view_text.css">
{% endblock extra %}

{% block content %}
  <div class="text-content">
    <section class="clearfix content">
      <h1>{{ text.getTitle() }}</h1>
      <article class="article">{{ text.getContent()|raw }}</article>
      <a href="/test/{{ text.getId() }}"
         class="btn btn-success pull-right">Пройти тест</a>
    </section>
    <div class="dictionary">
      {% for word in text.getWords() %}
        {% if word.getType() is same as ('full') %}
        <section class="word">
          <h2 class="text-primary">{{ word.getKeyword() }}</h2>
          <article>{{ word.getDefinition()|raw }}</article>
        </section>
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endblock content %}
